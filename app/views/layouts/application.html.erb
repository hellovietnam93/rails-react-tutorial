<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= react_component "Header" %>
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
      <%= react_component "Footer" %>
    </div>
  </body>
</html>
